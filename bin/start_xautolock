#!/bin/sh

# Lock the screen after 3 minutes of inactivity,
# Notify 10 seconds before locking and remove notification 1 second before locking, so the screenshot will look better :)

# corners: topleft | topright | bottomleft | bottomright
#          no lock |          |            | lock

xautolock -corners -00+ -time 3 -notify 10 -notifier "i3-msg fullscreen disable ; notify-send --expire-time 9000 \"Screen lock\" \"Screen will be locked in 10 seconds\"" -locker '~/.lib/lock-screen.sh'
