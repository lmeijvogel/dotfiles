[color]
  ui = auto
[alias]
  st = status --branch
  br = branch
  co = checkout
  ci = commit
  cp = cherry-pick
  c = diff --cached
  swc = stash save --keep-index

  d  = diff
  mt = mergetool

  l = "!f() { git --no-pager log --decorate --oneline -n 10 $1; }; f"
  ll = log --decorate --oneline
  lp = log -p
  diffr = log -p -1
  mylog = log --date-order --author=Lennaert

  pf = push --force-with-lease

  fp = fetch --prune

  ; Remove a commit from the history: Default is the last commit
  uncommit = "!f() { git rebase --onto ${1:-HEAD}^ ${1:-HEAD}; }; f"

  tmp    = branch -f tmp

  rup    = "!f() { base_commit=`git rev-parse --symbolic-full-name @{upstream}` git rebase --autosquash -i ${1:-$base_commit}; }; f"
  rup1   = rebase --interactive --autosquash HEAD~1
  rup2   = rebase --interactive --autosquash HEAD~2
  rup3   = rebase --interactive --autosquash HEAD~3
  rup4   = rebase --interactive --autosquash HEAD~4
  rup5   = rebase --interactive --autosquash HEAD~5

  rom    = rebase origin/master

  cia = commit --amend --no-edit
  ciam = commit --amend

  in  = !"git fetch -q && git log --format=\"%h %aN     %s\" HEAD..@{upstream}"
  out = log --format=\"%h   %s\" @{upstream}..HEAD

  s  = show
  s1 = show HEAD~1
  s2 = show HEAD~2
  s3 = show HEAD~3

  rs  = reset --soft
  rs1 = reset --soft HEAD~1
  rs2 = reset --soft HEAD~2
  rs3 = reset --soft HEAD~3

  r  = reset
  r1 = reset HEAD~1
  r2 = reset HEAD~2
  r3 = reset HEAD~3

  rh  = reset --hard
  rh1 = reset HEAD~1 --hard
  rh2 = reset HEAD~2 --hard
  rh3 = reset HEAD~3 --hard

  sl = stash list

  ss  = stash show -p
  ss1 = stash show -p stash@{1}
  ss2 = stash show -p stash@{2}
  ss3 = stash show -p stash@{3}

  sa  = stash apply
  sa1 = stash apply stash@{1}
  sa2 = stash apply stash@{2}
  sa3 = stash apply stash@{3}

  sp  = stash pop
  sp1 = stash pop stash@{1}
  sp2 = stash pop stash@{2}
  sp3 = stash pop stash@{3}

  sd  = stash drop
  sd1 = stash drop stash@{1}
  sd2 = stash drop stash@{2}
  sd3 = stash drop stash@{3}

  ap = add -p
  au = !"git add `git ls-files --unmerged | awk '{ print $4; }' | sort | uniq`"
  rc = rebase --continue
  ra = rebase --abort

  bg = bisect good
  bb = bisect bad

  cif  = commit --fixup
  cif1 = commit --fixup HEAD~1
  cif2 = commit --fixup HEAD~2
  cif3 = commit --fixup HEAD~3

  brr = branch --remote
  brrr = branch --remote
  brrrr = branch --remote
  brrrrr = branch --remote
  brrrrrr = branch --remote

  brc = branch --contains
  clena = clean

[mergetool]
  keepBackup = false
[advice]
  statusHints = false
  pushNonFastForward = false
  detachedHead = false
[interactive]
  singlekey = true
[help]
  autocorrect = 10
[push]
  default = current
[rebase]
  autoStash  = true
  autoSquash = true
[pull]
  rebase = true
[merge]
	tool = kdiff3
[core]
  pager = less --no-init --raw-control-chars --quit-if-one-screen
